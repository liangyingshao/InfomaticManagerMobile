<view id="software-install-create"><cu-custom vue-id="1" bgColor="bg-gradual-blue" isBack="/iuc/softwareInstall/v1/list" bind:__l="__l" vue-slots="{{['backText','content']}}"><view slot="backText">返回</view><view slot="content">软件安装申请表</view></cu-custom><form><view class="cu-steps margin-top"><block wx:for="{{steps}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="{{['cu-item',item.id<model.State?'text-blue':'']}}"><text class="num" data-index="{{index+1}}"></text>{{''+item.name+''}}</view></block></view><view class="cu-form-group margin-top"><view class="title">申请人</view><input disabled="true" name="input" value="{{model.Owner}}"/></view><view class="cu-form-group"><view class="title">联系方式</view><input disabled="true" name="input" value="{{model.Telephone}}"/><view class="cu-capsule radius"><view class="cu-tag bg-blue ">+86</view><view class="cu-tag line-blue">中国大陆</view></view></view><view class="cu-form-group"><view class="title">所属部门</view><input disabled="true" value="{{model.BelongDepart}}"/></view><view class="cu-form-group"><view class="title">申请时间</view><input disabled="true" value="{{model.CreatedTime}}"/></view><view class="cu-form-group margin-top"><view class="title">选择实验室</view><picker mode="multiSelector" range="{{[buildings,rooms]}}" range-key="Name" value="{{roomIndex}}" data-event-opts="{{[['columnchange',[['columnChange',['$event']]]],['change',[['selectRoom',['$event']]]],['input',[['__set_model',['','roomIndex','$event',[]]]]]]}}" bindcolumnchange="__e" bindchange="__e" bindinput="__e"><view class="picker">{{''+roomName+''}}</view></picker></view><view class="cu-form-group"><view class="title">待装软件<label class="must _span">*</label></view><input placeholder="(必填)请填写软件的名称" data-event-opts="{{[['input',[['__set_model',['$0','ApplicationName','$event',[]],['model']]]]]}}" value="{{model.ApplicationName}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">软件版本</view><input placeholder="(可选)请填写需要安装的软件版本" data-event-opts="{{[['input',[['__set_model',['$0','Version','$event',[]],['model']]]]]}}" value="{{model.Version}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">下载地址</view><input placeholder="(可选)请填写软件的下载地址" data-event-opts="{{[['input',[['__set_model',['$0','Download','$event',[]],['model']]]]]}}" value="{{model.Download}}" bindinput="__e"/></view><view class="padding flex flex-direction"><button class="cu-btn bg-green lg" disabled="{{isloading}}" data-event-opts="{{[['tap',[['submit']]]]}}" bindtap="__e">提交</button></view></form></view>