<view id="lab-apply-creat"><cu-custom vue-id="1" bgColor="bg-gradual-blue" isBack bind:__l="__l" vue-slots="{{['backText','content']}}"><view slot="backText">返回</view><view slot="content">创建申请表</view></cu-custom><form><view class="cu-steps magin-top"><block wx:for="{{steps}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="{{['cu-item',item.id<model.State?'text-blue':'']}}"><text class="num" data-index="{{index+1}}"></text>{{''+item.name+''}}</view></block></view><view class="cu-form-group margin-top"><view class="title">申请原因<text class="text-red">*</text></view><input name="input" maxlength="200" data-event-opts="{{[['input',[['__set_model',['$0','ApplicationReason','$event',[]],['model']]]]]}}" value="{{model.ApplicationReason}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">选择申请实验室<text class="text-red">*</text></view><picker mode="multiSelector" range="{{[buildings,rooms]}}" range-key="Name" value="{{roomIndex}}" data-event-opts="{{[['columnchange',[['columnChange',['$event']]]],['change',[['selectRoom',['$event']]]],['input',[['__set_model',['','roomIndex','$event',[]]]]]]}}" bindcolumnchange="__e" bindchange="__e" bindinput="__e"><view class="content">{{''+currentRoom+''}}</view></picker></view><view class="cu-form-group"><view class="title">起止日期<text class="text-red">*</text></view><date vue-id="2" placeholder="请选择开始日期" minSelect="{{currentDate}}" data-event-opts="{{[['^getData',[['selectDate1']]]]}}" bind:getData="__e" bind:__l="__l"></date><date vue-id="3" placeholder="请选择结束日期" minSelect="{{model.startDate}}" data-event-opts="{{[['^getData',[['selectDate2']]]]}}" bind:getData="__e" bind:__l="__l"></date></view><block wx:if="{{isStudent}}"><view class="cu-form-group"><view class="title">选择指导老师<text class="text-red">*</text></view><picker range="{{teachers}}" range-key="RealName" data-event-opts="{{[['change',[['selectTeacher',['$event']]]]]}}" bindchange="__e"><view class="content">{{''+currentTeacher+''}}</view></picker></view></block><view class="padding flex flex-direction"><button class="cu-btn bg-green lg" loading="{{isSubmitting}}" data-event-opts="{{[['tap',[['submit']]]]}}" bindtap="__e">提交</button></view></form></view>